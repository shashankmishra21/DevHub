generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Search {
  id        String   @id @default(cuid())
  username  String
  createdAt DateTime @default(now())
}

model User {
  id          Int           @id @default(autoincrement())
  username    String        @unique
  name        String?
  avatarUrl   String?
  bio         String?
  location    String?
  profileUrl  String
  repositories Repository[]
  createdAt   DateTime      @default(now())
}

model Repository {
  id          Int      @id @default(autoincrement())
  name        String
  url         String
  stars       Int
  language    String?
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}

